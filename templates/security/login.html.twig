{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="grid place-items-center h-[80dvh]">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-bold text-center mb-10">Connectez vous</h1>
            <label for="inputEmail" class="label label-text font-semibold">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input input-bordered form-control " autocomplete="email" required autofocus>
            <label for="inputPassword" class="label label-text font-semibold">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="input input-bordered form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary w-full mt-3" type="submit">
                Sign in
            </button>
            <a href="{{ path('app_register') }}" class="block text-right mt-3 hover:text-accent underline">Pas de compte ?</a>
        </form>
    </main>
{% endblock %}
